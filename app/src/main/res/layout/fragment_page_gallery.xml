<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/latar"
    tools:context=".page_galleryFragment">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#FDE353">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:src="@drawable/vector" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:text="@string/gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:src="@drawable/gal_2" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:src="@drawable/gal_1" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:src="@drawable/gal_6" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:src="@drawable/gal_7" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:src="@drawable/gal_5" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:src="@drawable/gal_4" />

        </GridLayout>
    </LinearLayout>

</LinearLayout>